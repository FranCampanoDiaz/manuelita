        GridLayout:
            cols: 2
            rows: 1

            MDRoundFlatIconButton:
                icon: "keyboard-backspace"
                text: "Go back"
                theme_text_color: "Custom"
                text_color: 75/255, 75/255, 75/255, 1
                theme_icon_color: "Custom"
                icon_color: 75/255, 75/255, 75/255, 1


                on_release:
                    root.manager.current='Menu'