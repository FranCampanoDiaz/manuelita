            text: 'LOGIN'
            pos_hint: {"center_x": .5}
            font_size: 15
            on_release:
                root.manager.current='Login'


<CalculatorScreen>
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            source:'foto.jpg'
            size: root.width, root.height
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        TextInput:
            id: cal_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint:(1, .25)
        GridLayout:
            cols: 4
            rows: 5

 #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"


            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: app.clear()

            MDRectangleFlatIconButton:
                id: backspace
                icon: "backspace"
                size_hint: (.2, .2)
                font_size: 20
                text: "delete"
                bg_color: "custom"
                on_press: app.remove()



            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_release: app.math_sign("/")

 #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(7)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(8)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(9)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_release: app.math_sign("*")

 #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(4)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(5)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_release: app.math_sign("-")

 #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(1)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(2)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color:(157/255,157/255,157/255,1 )
                on_release: app.button_press(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_release: app.math_sign("+")

  #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
